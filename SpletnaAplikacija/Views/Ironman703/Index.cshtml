@model IEnumerable<SpletnaAplik.Models.ironman703>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<h1>Ironman703 tekmovalci</h1>
<br/>
<div class="container-fluid">
    <table border="2" class="table table-sm">
        <tr>
            <td>
                <p>Top 10 tekmovalcev po času</p>
                @using (Html.BeginForm())
                {
                    <input type="submit" class="btn btn-light" asp-area="" asp-controller="ironman703" asp-action="Top10Tekm" value="Najboljsi">
                }
            </td>
            <td>
                <p>Povprečni časovi tekmovalcev</p>
                @using (Html.BeginForm())
                {
                    <input type="submit" class="btn btn-light" asp-area="" asp-controller="ironman703" asp-action="Povprecje" value="Isci">
                }
            </td>
        </tr>
    </table>
</div>

<div class="container-fluid">
    <p>Iskanje tekmovalca po imenu</p>
    @using (Html.BeginForm())
    {
        <input type="text" name="ime">
        <input type="submit" class="btn btn-light" asp-area="" asp-controller="ironman703" asp-action="Tekmovalec" name="Isci" value="Isci tekmovalca">
    }
    <br />
    <table border="2" class="table table-sm">
        <tr>
            <td>
                <p>Iskanje najbolsega plavalca</p>
                @using (Html.BeginForm())
                {
                    <input type="submit" class="btn btn-light" asp-area="" asp-controller="ironman703" asp-action="Plavalec" name="Isci" value="Najboljsi plavalec">
                }
            </td>
            <td>
                <p>Iskanje najbolsega tekaca</p>
                @using (Html.BeginForm())
                {
                    <input type="submit" class="btn btn-light" asp-area="" asp-controller="ironman703" asp-action="Tekac" name="Isci" value="Najboljsi tekač">
                }
            </td>
            <td>
                <p>Iskanje najbolsega Kolesarja</p>
                @using (Html.BeginForm())
                {
                    <input type="submit" class="btn btn-light" asp-area="" asp-controller="ironman703" asp-action="Kolesar" value="Najboljsi kolesar">
                }
            </td>
        </tr>
    </table>
</div>


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th scope="col"> 
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.genderRank)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.divRank)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.overallRank)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.bib)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.division)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.age)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.state)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.country)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.profession)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.points)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.swim)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.swimDistance)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.t1)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.bike)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.bikeDistance)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.t2)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.run)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.runDistance)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.overall)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.genderRank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.divRank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.overallRank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.bib)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.division)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.state)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.profession)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.points)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.swim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.swimDistance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.t1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.bike)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.bikeDistance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.t2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.run)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.runDistance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.overall)
                </td>
            </tr>
        }
    </tbody>
</table>
